<body>
    <%- include('./partials/header.ejs') %>
    <% if (locals.message) {%>
    <div class="container mt-2">
        <div class="row">
            <div class="col-4">
                <img class="img-fluid displayImg" src="<%= message.display_img %>" alt="">
                <div class="hideInPc">
                    <div class="d-flex mt-2">
                        <% if (message.sub_img_1) {%> <img class="navigateImg" src="<%= message.sub_img_1 %>" height="40px" width="auto" alt=""> <% } %>
                        <% if (message.sub_img_2) {%> <img class="navigateImg" src="<%= message.sub_img_2 %>" height="40px" width="auto" alt=""> <% } %>
                        <% if (message.sub_img_3) {%> <img class="navigateImg" src="<%= message.sub_img_3 %>" height="40px" width="auto" alt=""> <% } %>
                        <% if (message.sub_img_4) {%> <img class="navigateImg" src="<%= message.sub_img_4 %>" height="40px" width="auto" alt=""> <% } %>
                    </div>
                </div>
                
            </div>
            <div class="col-sm mt-3">
                <% if (message.model.includes('Inch')) { let model=message.model.replace('Inch', '"' ) %>
                <h2 class="ftr_address"><strong>
                        <%= model %>
                    </strong></h2>
                    <% } else { %> <h2 class="ftr_address"><strong>
                            <%= message.model %>
                        </strong></h2> <%}%>
                
                <div class="container-fluid pl-0">
                    <h5 class="ftr_address">Price (BDT)- <del class="text-danger"><%= message.mrp %></del></h5>
                    <h5 class="text-success ftr_address">Offer Price (BDT) <%= message.offer_price %></h5>
                </div>
                <div class="container-fluid">
                    <pre><%= message.sub_description %></pre>
                </ul>
                </div>
                <div class="container-fluid">
                    <button type="button" name="orderNow" productid="<%= message.id %>" brand="<%= message.brand %>"
                        model="<%= message.model %>" price="<%= message.offer_price %>" class="btn btn-outline-danger btn-sm orderNow">
                        Order Now
                    </button>
                    <button type="button" name="orderNow" productid="<%= message.id %>" brand="<%= message.brand %>"
                        model="<%= message.model %>" price="<%= message.offer_price %>" class="btn btn-outline-primary btn-sm orderNow">
                        Apply for Kisti/EMI
                    </button>
                    <button type="button" name="addToCart" productid="<%= message.id %>" brand="<%= message.brand %>"
                        model="<%= message.model %>" price="<%= message.offer_price %>"
                        class="btn btn-outline-dark btn-sm addToCart">
                        <span class="fab fa-opencart"></span> Add to cart
                    </button>
                </div>
                <div class="container-fluid hideInMobile" style="margin-left: -50px;margin-top: 30px;">
                    <% if (message.sub_img_1) {%> <img class="navigateImg" style="cursor: pointer;" src="<%= message.sub_img_1 %>" height="100px" width="auto" alt=""> <% } %>
                    <% if (message.sub_img_2) {%> <img class="navigateImg" style="cursor: pointer;" src="<%= message.sub_img_2 %>" height="100px" width="auto" alt=""> <% } %>
                    <% if (message.sub_img_3) {%> <img class="navigateImg" style="cursor: pointer;" src="<%= message.sub_img_3 %>" height="100px" width="auto" alt=""> <% } %>
                    <% if (message.sub_img_4) {%> <img class="navigateImg" style="cursor: pointer;" src="<%= message.sub_img_4 %>" height="100px" width="auto" alt=""> <% } %>
                </div>
            </div>
        </div>
        <div class="container mt-3 hideInMobile">
            <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active ftr_address" data-toggle="tab" href="#features">Features</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ftr_address" data-toggle="tab" href="#warrentyInfo">Warranty Information</a>
            </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane container active" id="features">
                    <div class="container mt-3 text-center">
                        <div class="container text-left">
                            <% if (message.textfeature) {%>
                                <h5><pre><%= message.textfeature %></pre></h5>
                                <% } %>
                        </div>
                        <% if (message.feature_img_1) {%> <img class="img-fluid" src="<%= message.feature_img_1 %>" alt=""> <% } %>
                        <% if (message.feature_img_2) {%> <img class="img-fluid" src="<%= message.feature_img_2 %>" alt=""> <% } %>
                        <% if (message.feature_img_3) {%> <img class="img-fluid" src="<%= message.feature_img_3 %>" alt=""> <% } %>
                        <% if (message.feature_img_4) {%> <img class="img-fluid" src="<%= message.feature_img_4 %>" alt=""> <% } %>
                        
                    </div>
                </div>
            <div class="tab-pane container fade" id="warrentyInfo">
                <h6><pre><%= message.warrenty %></pre></h6>
            </div>
            </div>
        </div>
        <div class="mt-3 hideInPc">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" style="font-size: 13px;" href="#home">Features</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" data-toggle="tab" style="font-size: 13px;" href="#menu1">Warranty</a>
                </li>
            </ul>
            
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane p-1 active" id="home">
                    <div class="text-left">
                        <% if (message.textfeature) {%>
                            <p style="font-size: 13px;text-align: justify;"><%= message.textfeature %></p>
                            <% } %>
                    </div>
                    <% if (message.feature_img_1) {%> <img class="img-fluid" src="<%= message.feature_img_1 %>" alt=""> <% } %>
                    <% if (message.feature_img_2) {%> <img class="img-fluid" src="<%= message.feature_img_2 %>" alt=""> <% } %>
                    <% if (message.feature_img_3) {%> <img class="img-fluid" src="<%= message.feature_img_3 %>" alt=""> <% } %>
                    <% if (message.feature_img_4) {%> <img class="img-fluid" src="<%= message.feature_img_4 %>" alt=""> <% } %>
                    
                </div>
                <div class="tab-pane p-1 fade" id="menu1">
                    <p style="font-size: 13px; text-align: justify;"><%= message.warrenty %></p>
                </div>
            </div>
        </div>
        
    </div>
    <div class="container-fluid">
        <h4>Related Products</h4>
    </div>
    <hr>
    <div class="container-fluid d-flex" style="overflow: scroll;">
        <% if (locals.relatedProducts) { relatedProducts.forEach(function(product) { %>
            <div class="container-fluid text-center border imgHoverEffect p-2 m-2 product"
                style="max-width: 330px;cursor: pointer;" productId="<%= product.id %>">
                <div class="container-fluid" productId="<%= product.id %>">
                    <p style="color:#0d69d3;cursor: pointer;" productId="<%= product.id %>"><strong
                            productId="<%= product.id %>">
                            <% if (product.model.includes('Inch')) { let model=product.model.replace('Inch', '"' ) %>
                                <%= model %>
                                    <% } else {%>
                                        <%= product.model %>
                                            <% } %>
                        </strong></p>
                </div>
                <div class="container-fluid" productId="<%= product.id %>">
                    <img src="<%= product.display_img %>" alt="Product Image" height="auto" width="100px"
                        productId="<%= product.id %>" />
                </div>
                <div class="container-fluid mt-2" productId="<%= product.id %>">
                    <div class="row" productId="<%= product.id %>">
                        <div class="col" productId="<%= product.id %>">
                            <p style="color:#0d69d3" productId="<%= product.id %>">Tk.<del>
                                    <%= product.mrp %>
                                </del>
                            </p>
                        </div>
                        <div class="col" productId="<%= product.id %>">
                            <p style="color:#0d69d3" productId="<%= product.id %>">Tk.<%= product.offer_price %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <% })} %>
            
    </div>
    <% } %>

    <%- include('./partials/footer.ejs') %>
    <script>
        $(document).ready(function(){
            $(".navigateImg").click(function(e){
                let src = e.target.getAttribute("src")
                $(".displayImg").attr("src", `${src}`);
            });
            $("#1").addClass("active")
        });
        
        
    </script>
</body>