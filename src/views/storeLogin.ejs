<body>
    <div style="max-width: 400px;" class="container text-white bg-warning mt-5 border p-4">
        <div class="container">
            <h3>Store Login</h3>
             
        </div>
        
            <%- include('./partials/error.ejs') %>
              
        
        <form action="/storeLogin" method="POST">
            <div class="container mt-5">
                <div class="row mt-3">
                    <div class="col-lg-3">
                        <h6><label for="id">login Id</label></h6>
                    </div>
