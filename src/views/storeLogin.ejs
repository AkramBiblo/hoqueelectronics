                        <input type="text" class="form-control" name="id" placeholder="Login Id" required>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-3">
                        <h6><label for="password">Password</label></h6>
                    </div>
                    <div class="col-lg-9">
                        <input type="text" class="form-control" name="password" placeholder="Password" required>
                    </div>
                </div>
                <div class="row d-flex justify-content-end mt-4 mr-3">
                    <input class="btn btn-success mr-2" name="submit" type="submit" value="Login">
                </div>
            </div>
        </form>
        
    </div>
