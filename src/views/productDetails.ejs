                            </div>
                            <div class="carousel-item">
                                <img class="img-fluid" src="/uploadedFiles/<%= message.File_3 %>" height="350px" width="350px"
                                    alt="Laptop">
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="carousel-control-pv" href="#demo" data-slide="pv">
                            <span class="carousel-control-pv-icon bg-dark"></span>
                        </a>
                        <a class="carousel-control-next" href="#demo" data-slide="next">
                            <span class="carousel-control-next-icon bg-dark"></span>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="container">
                        <h2><%= message.Title %></h1>
                    </div>
                    <div class="container mt-4">
                        <h3><%= message.Price %></h5>
                    </div>
                    <div class="container p0 mt-4">
                        <ul class="detailsUl">
                            <li>
                                <p class="font_14px">Model: <%= message.Model %></p>
                            </li>
                            <li>
                                <p class="font_14px">Processor: <%= message.Processor %></p>
                            </li>
                            <li>
                                <p class="font_14px">RAM: <%= message.Memory %>M</p>
