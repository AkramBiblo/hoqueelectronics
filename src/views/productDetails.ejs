<body>
    <%- include('./partials/header.ejs') %>
    <% if (locals.message !== null) { if (locals.message.Type == 'Accessories'){%> 
        <div class="container-fluid mt-4">
            <div class="row">
                <div class="col">
                    <div id="demo" class="carousel slide mt-5" data-ride="carousel">

                        <!-- The slideshow -->
                        <div class="carousel-inner text-center">
                            <div class="carousel-item active">
                                <img class="img-fluid" src="/uploadedFiles/<%= message.File_1 %>" height="350px" width="350px"
                                    alt="Laptop">
                            </div>
                            <div class="carousel-item">
                                <img class="img-fluid" src="/uploadedFiles/<%= message.File_2 %>" height="350px" width="350px"
                                    alt="Laptop">
                            </div>
                            <div class="carousel-item">
                                <img class="img-fluid" src="/uploadedFiles/<%= message.File_3 %>" height="350px" width="350px"
                                    alt="Laptop">
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="carousel-control-pv" href="#demo" data-slide="pv">
                            <span class="carousel-control-pv-icon bg-dark"></span>
                        </a>
                        <a class="carousel-control-next" href="#demo" data-slide="next">
                            <span class="carousel-control-next-icon bg-dark"></span>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="container">
                        <h2><%= message.Title %></h1>
                    </div>
                    <div class="container mt-4">
                        <h3>Price: <%= message.Price %></h5>
                    </div>
                    <div class="container p0 mt-4">
                        <ul class="detailsUl">
                            <li>
                                <p class="font_14px">Model: <%= message.Model %></p>
                            </li>
                            <li>
                                <p class="font_14px">Description: <%= message.Description %></p>
                            </li>
                            <li>
                                <p class="font_14px">Color: <%= message.Color %></p>
                            </li>
                            <li>
                                <p class="font_14px">On Stock: <%= message.Qty %></p>
                            </li>
                        </ul>
                    </div>
                    <div class="container d-flex justify-content-end">
                        <button type="button" name="addToCart" productid="<%= message.Id %>" brand="<%= message.Brand %>" productTitle="<%= message.Title %>" model="<%= message.Model %>" price="<%= message.Price %>" class="btn btn-outline-dark addToCart">
                            <span class="fab fa-opencart"></span> Add to cart
                        </button>
                    </div>
                </div>
            </div>
            
        </div>
        <% } else { %> 
        <div class="container-fluid mt-4">
            <div class="row">
                <div class="col">
