        <div class="container-fluid mt-4">
            <h6>Image Section</h6>
            <div class="row">
            <div class="col-sm">
                <input type="text" class="form-control" name="displayImg" value="<%= message.display_img%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="subImg_1" value="<%= message.sub_img_1%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="subImg_2" value="<%= message.sub_img_2%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="subImg_3" value="<%= message.sub_img_3%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="subImg_4" value="<%= message.sub_img_4%>">
            </div>
            </div>
        </div>
        <div class="container-fluid mt-4">
            <h6>Features Section</h6>
            <div class="row">
            <div class="col-sm">
                <input type="text" class="form-control" name="featureImg_1" value="<%= message.feature_img_1%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="featureImg_2" value="<%= message.feature_img_2%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="featureImg_3" value="<%= message.feature_img_3%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="featureImg_4" value="<%= message.feature_img_4%>">
            </div>
            </div>
        </div>

        <div class="container-fluid mt-4 pb-3">
        
            <div class="row">
                <div class="col-sm">
                    <h6>Text Features</h6>
                    <textarea name="textfeature" id="" cols="50" rows="5"><%= message.warrenty%></textarea>
                </div>
                <div class="col-sm">
                    <h6>Warrenty Section</h6>
                    <textarea name="warrentyInfo" cols="100" rows="5"><%= message.warrenty%></textarea>
                </div>
            </div>
            <div class="container d-flex justify-content-end">
                <input class="btn btn-outline-dark mr-2" name="submit" type="submit" value="submit" />
                <input type="hidden" name="id" value="<%= message.id %>">
            </div>
        </div>
    </div>
    </form>
    <% } %>

    <script>
        $("#sub_category_div").hide();
        $(`select[name="category"]`).change(() => {
            let name = $(`select[name="category"]`).val()
            if (name == "Refrigerators & Freezer") {
                $(".sub_category").hide();
                $(".ref_sub_cat").show();
                $("#sub_category_div").show();
            } else if (name == "LED TV") {
                $(".sub_category").hide();
                $(".tv_sub_cat").show();
                $("#sub_category_div").show();
            } else if (name == "Air Conditioner") {
                $(".sub_category").hide();
                $(".ac_sub_cat").show();
                $("#sub_category_div").show();
            } else if (name == "Washing Machine") {
                $(".sub_category").hide();
                $(".wm_sub_cat").show();
                $("#sub_category_div").show();
            } else {
                $("#sub_category_div").hide();
            }
        })
    </script>
</body>