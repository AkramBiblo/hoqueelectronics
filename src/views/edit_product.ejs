                        <option>Konka</option>
                    </select>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="model" value="<%= message.model%>">
            </div>
            <div class="col-sm">
                <select class="form-control" name="category" required>
                    <option>Select Category</option>
                    <option>Refrigerators & Freezer</option>
                    <option>LED TV</option>
                    <option>Air Conditioner</option>
                    <option>Washing Machine</option>
                    <option>Air Cooler</option>
                    <option>Geyser</option>
                    <option>Kettle</option>
                    <option>Room Heater</option>
                    <option>Trimmer, Shaver & Hair Clipper</option>
                    <option>Mosquito Bat</option>
                    <option>Water Purifier & Dispenser</option>
                    <option>Iron</option>
                    <option>Toaster, Cake & Sandwich Maker</option>
                    <option>Rechargable Lamp & Torch</option>
                    <option>Voltage Stabilizer & Protector</option>
                    <option>Sewing Machine</option>
                    <option>Gas Stove</option>
                    <option>Induction, Infrared & Hot Plate Cooker</option>
                    <option>Rice Cooker</option>
                    <option>Grinder</option>
                    <option>Roti Maker</option>
                    <option>Pressure Cooker</option>
                    <option>Blender</option>
                    <option>Multi Cooker</option>
                    <option>Kitchen Hood</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4" id="sub_category_div">
                <select class="form-control" name="sub_category">
                    <option class="ref_sub_cat sub_category">Sub Category</option>
                    <option class="ref_sub_cat sub_category">French Door Refrigerators</option>
                    <option class="ref_sub_cat sub_category">Side by Side Refrigerators</option>
                    <option class="ref_sub_cat sub_category">Base Freezer Refrigerators</option>
                    <option class="ref_sub_cat sub_category">Top-Freezer Refrigerators</option>
                    <option class="ref_sub_cat sub_category">Mini Refrigerators</option>
                    <option class="ref_sub_cat sub_category">Bar Refrigerators</option>
                    <option class="ref_sub_cat sub_category">Business Refrigerators</option>
                    <option class="ref_sub_cat sub_category">Direct cool refrigerator</option>
                    <option class="ref_sub_cat sub_category">Non Frost refrigerator</option>
                    <option class="tv_sub_cat sub_category">Basic TV</option>
                    <option class="tv_sub_cat sub_category">Smart LED TV</option>
                    <option class="tv_sub_cat sub_category">4K Ultra HD TV</option>
                    <option class="tv_sub_cat sub_category">Android LED TV</option>
                    <option class="tv_sub_cat sub_category">TV Accessories</option>
                    <option class="ac_sub_cat sub_category">Inverter AC</option>
                    <option class="ac_sub_cat sub_category">Non Inverter AC</option>
                    <option class="ac_sub_cat sub_category">Cassette Type AC</option>
                    <option class="ac_sub_cat sub_category">Ceiling Type AC</option>
                    <option class="wm_sub_cat sub_category">Front Loading</option>
                    <option class="wm_sub_cat sub_category">Top Loading</option>
                </select>
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="demoPrice" value="<%= message.mrp%>">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="offerPrice" value="<%= message.offer_price%>">
            </div>
            <div class="col">
                <textarea name="sub_description" cols="50" rows="2"><%= message.sub_description %></textarea>
            </div>
        </div>
        </div>
        <!-- <div class="container-fluid mt-4">
            <h6>Sub Description Section</h6>
            <div class="row">
            <div class="col-sm">
                <input type="text" class="form-control" name="subD_1" placeholder="Description 1">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="subD_2" placeholder="Description 2">
            </div>
            <div class="col-sm">
                <input type="text" class="form-control" name="subD_3" placeholder="Description 3">
